
<div class="glide">
    <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
                {% for item in carouselItems %}
                    <li class="glide__slide">
                        <img src="{{ item.image }}" alt="{{ item.title }}">
                        <h3>{{ item.title }}</h3>
                        <p>{{ item.description }}</p>
                    </li>
                {% endfor %}

            <li class="glide__slide">
                <img src="http://placehold.it/500x300" alt="Placeholder 1">
                <h3>Placeholder 1</h3>
                <p>This is a placeholder slide.</p>
            </li>

            <li class="glide__slide">
                <img src="http://placehold.it/500x300" alt="Placeholder 2">
                <h3>Placeholder 2</h3>
                <p>This is another placeholder slide.</p>
            </li>
        </ul>
    </div>
    <div class="glide__bullets" data-glide-el="controls[nav]">
        {% for item in carouselItems %}
            <button class="glide__bullet" data-glide-dir="={{ loop.index }}"></button>
        {% endfor %}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
    new Glide('.glide', {
        type: 'carousel',
        perView: 3,
        focusAt: 'center',
        breakpoints: {
            768: {
                perView: 1
            }
        }
    }).mount();
</script>
